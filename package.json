{
  "name": "clockwork-orangehrm-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Windows-first Electron desktop app for OrangeHRM attendance reporting",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron:build\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron:build": "tsc -p electron/tsconfig.json --watch",
    "dev:electron": "wait-on tcp:5317 dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5317 nodemon --watch dist-electron --ext js --exec \"node electron/run-electron.cjs\"",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run typecheck && npm run build:renderer && npm run build:electron",
    "db:check": "npm run build:electron && node dist-electron/backend/db-check.js",
    "build:installer": "electron-builder --win nsis",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "cors": "2.8.5",
    "date-fns-jalali": "4.1.0-0",
    "electron-store": "8.2.0",
    "express": "4.21.2",
    "lucide-react": "0.487.0",
    "motion": "12.23.24",
    "mysql2": "3.14.3",
    "pdfkit": "0.15.2",
    "pg": "8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router": "7.13.0",
    "sonner": "2.0.3",
    "tw-animate-css": "1.3.8",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.12",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "22.15.30",
    "@types/pdfkit": "0.17.3",
    "@types/pg": "8.15.6",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.7.0",
    "autoprefixer": "10.4.20",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "nodemon": "3.1.10",
    "postcss": "8.4.49",
    "tailwindcss": "4.1.12",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "wait-on": "8.0.3"
  },
  "build": {
    "appId": "com.clockwork.orangehrm.desktop",
    "productName": "Clockwork OrangeHRM Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "python/**/*",
      "src/assets/App-Logo.ico",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/App-Logo.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "installerIcon": "src/assets/App-Logo.ico",
      "uninstallerIcon": "src/assets/App-Logo.ico",
      "installerHeaderIcon": "src/assets/App-Logo.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}



