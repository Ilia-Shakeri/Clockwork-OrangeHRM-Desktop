{
  "name": "clockwork-orangehrm-desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Windows-first Electron desktop app for OrangeHRM attendance reporting",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron:build\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron:build": "tsc -p electron/tsconfig.json --watch",
    "dev:electron": "wait-on tcp:5317 dist-electron/main.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5317 nodemon --watch dist-electron --ext js --exec \"node electron/run-electron.cjs\"",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run typecheck && npm run build:renderer && npm run build:electron",
    "build:installer": "electron-builder --win nsis",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@mui/icons-material": "7.3.5",
    "@mui/material": "7.3.5",
    "@popperjs/core": "2.11.8",
    "@radix-ui/react-accordion": "1.2.3",
    "@radix-ui/react-alert-dialog": "1.1.6",
    "@radix-ui/react-aspect-ratio": "1.1.2",
    "@radix-ui/react-avatar": "1.1.3",
    "@radix-ui/react-checkbox": "1.1.4",
    "@radix-ui/react-collapsible": "1.1.3",
    "@radix-ui/react-context-menu": "2.2.6",
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-hover-card": "1.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-menubar": "1.1.6",
    "@radix-ui/react-navigation-menu": "1.2.5",
    "@radix-ui/react-popover": "1.1.6",
    "@radix-ui/react-progress": "1.1.2",
    "@radix-ui/react-radio-group": "1.2.3",
    "@radix-ui/react-scroll-area": "1.2.3",
    "@radix-ui/react-select": "2.1.6",
    "@radix-ui/react-separator": "1.1.2",
    "@radix-ui/react-slider": "1.2.3",
    "@radix-ui/react-slot": "1.1.2",
    "@radix-ui/react-switch": "1.1.3",
    "@radix-ui/react-tabs": "1.1.3",
    "@radix-ui/react-toggle": "1.1.2",
    "@radix-ui/react-toggle-group": "1.1.2",
    "@radix-ui/react-tooltip": "1.1.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "cors": "2.8.5",
    "date-fns": "3.6.0",
    "date-fns-jalali": "4.1.0-0",
    "electron-store": "8.2.0",
    "embla-carousel-react": "8.6.0",
    "express": "4.21.2",
    "input-otp": "1.4.2",
    "lucide-react": "0.487.0",
    "motion": "12.23.24",
    "mysql2": "3.14.3",
    "next-themes": "0.4.6",
    "pdfkit": "0.15.2",
    "react": "18.3.1",
    "react-day-picker": "8.10.1",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.55.0",
    "react-popper": "2.3.0",
    "react-resizable-panels": "2.1.7",
    "react-responsive-masonry": "2.7.1",
    "react-router": "7.13.0",
    "react-slick": "0.31.0",
    "recharts": "2.15.2",
    "sonner": "2.0.3",
    "tailwind-merge": "3.2.0",
    "tw-animate-css": "1.3.8",
    "vaul": "1.1.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.12",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "22.15.30",
    "@types/pdfkit": "0.17.3",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react": "4.7.0",
    "autoprefixer": "10.4.20",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "nodemon": "3.1.10",
    "postcss": "8.4.49",
    "tailwindcss": "4.1.12",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "wait-on": "8.0.3"
  },
  "build": {
    "appId": "com.clockwork.orangehrm.desktop",
    "productName": "Clockwork OrangeHRM Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "python/**/*",
      "src/assets/App-Logo.ico",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/App-Logo.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "installerIcon": "src/assets/App-Logo.ico",
      "uninstallerIcon": "src/assets/App-Logo.ico",
      "installerHeaderIcon": "src/assets/App-Logo.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}



