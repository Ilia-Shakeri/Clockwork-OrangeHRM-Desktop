{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/api/**/*.ts",
    "src/components/**/*.tsx",
    "src/pages/**/*.tsx",
    "src/lib/**/*.ts",
    "src/types/**/*.ts",
    "src/types/**/*.d.ts",
    "src/app/components/**/*.tsx",
    "src/app/lib/utils.ts",
    "vite.config.mts"
  ]
}

